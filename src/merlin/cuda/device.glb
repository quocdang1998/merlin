#include "merlin/cuda/device.hpp"

namespace merlin {

// Add 2 integers on GPU
__global__ static void add_2_int_on_gpu(int * p_a, int * p_b, int * p_result) { *p_result = *p_a + *p_b; }

// CPU function calling kernel on GPU
void cuda::add_integers_on_gpu(int * p_a, int * p_b, int * p_result) {
    add_2_int_on_gpu<<<1, 1>>>(p_a, p_b, p_result);
    ::cudaDeviceSynchronize();
}

}  // namespace merlin
