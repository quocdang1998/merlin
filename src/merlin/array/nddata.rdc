#include "merlin/array/nddata.hpp"

namespace merlin::array {

// -------------------------------------------------------------------------------------------------------------------------
// NdData
// -------------------------------------------------------------------------------------------------------------------------

// Number of elements
__cuhostdev__ std::uint64_t NdData::size(void) {
    std::uint64_t size = 1;
    for (int i = 0; i < this->ndim_; i++) {
        size *= this->shape_[i];
    }
    return size;
}

}  // namespace merlin::array
